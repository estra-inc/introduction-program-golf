{
  "scripts": {
    "prepare": "husky install",
    "lint:frontend": "cd frontend && npm run lint:fix",
    "lint:backend": "cd backend && ./vendor/bin/pint"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && npm run lint:fix"
    ],
    "backend/**/*.php": [
      "cd backend && ./vendor/bin/pint"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.5.0"
  }
}
